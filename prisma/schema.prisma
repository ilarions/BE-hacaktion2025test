generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  iconImg  String
  isAlowed Boolean
  emailStatus Boolean
  code String
  yourQuiz Quiz[]
}

model Quiz {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  img    String? 
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  quests Quest[]
}

model Quest {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  type       String
  img        String?
  variableA  String
  variableB  String
  variableC  String
  variableD  String
  quizId     String @db.ObjectId
  quiz       Quiz   @relation(fields: [quizId], references: [id])
}
